---
interface Props {
	title: string;
	punto1: string;
  punto2: string;
  punto3: string;
  punto4: string;
  punto5: string;
  punto6: string;

	img: string;
  transition?: string

  infoDesplegable1: string;
  infoDesplegable2: string;
}

const { title, punto1, punto2, punto3, punto4, punto5, punto6, img, infoDesplegable1, infoDesplegable2, transition } = Astro.props;

---

