---
import Image from 'astro/components/Image.astro';
import logo from '../img/logo-hor2.png';
---

<div class="container-nav">
  <div class="navbar-mov">
    <Image src={logo} width="600" height="600" alt='Logo Vida Prenatal' class:list="logoImg" id='logo'/>
    <a id="btn-menu" class="btn-menu">
      <i class="bi bi-list"></i>
    </a>
    <a id="btn-close" class="btn-menu btn-menu-close" style="display: none;">
      <i class="bi bi-x-lg"></i>
    </a>
    <div class="menu-desktop">
      <a href="/" class="overlay-item">Inicio</a>
      <a href="/Trayectoria" class="overlay-item">Conóceme</a>
      <a href="/#servicios" class="overlay-item">Servicios</a>
      <a href="/Ginecologia" class="overlay-item">Ginecología</a>
      <a href="#ubicacion" class="overlay-item">Ubicación</a>
      <button><a href="tel:5511119365" target="_blank">5511119365</a></button>
    </div>
  </div>
</div>
<div class="overlay-menu" id="overlay-menu">
  <a href="/" class="overlay-item">Inicio</a>
  <a href="/Trayectoria" class="overlay-item">Conóceme</a>
  <a href="/#servicios" class="overlay-item">Servicios</a>
  <a href="/Ginecologia" class="overlay-item">Ginecología</a>
  <a href="#ubicacion" class="overlay-item" id="btn-close-1">Ubicación</a>
  <a href="tel:5511119365" class="overlay-item">5511119365</a>
  <div class="rs">
    <a target="_blank" href="https://www.facebook.com/profile.php?id=61550929773630">
      <i class="bi bi-facebook"></i>
    </a>
    <a target="_blank" href="https://www.instagram.com/vidaprenatal_maternofetal/">
      <i class="bi bi-instagram"></i>
    </a>
  </div>
</div>

<!--Estilos-->
<style>
  .container-nav {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(144, 212, 198, 0.493);
  }
  .navbar-mov {
    height: 100px;
    display: flex;
    width: 100%;
    max-width: 1440px;
    justify-content: space-between;
    align-items: center;
  }
  .navbar-mov .logoImg {
    max-width: 200px;
    height: auto;
    margin-left: 5%;
    cursor: pointer;
  }
  .btn-menu {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    background-color: var(--rosa);
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 5%;
    text-align: center;
  }
  .btn-menu-close  {
    background-color: var(--morado);
  }
  .btn-menu i {
    font-size: 35px;
    color: white;
  }
  .overlay-menu {
    position: absolute;
    background-color: rgba(164,204,196,0.9);
    top: 100px;
    right: 0;
    display: flex;
    justify-content: start;
    align-items: center;
    flex-direction: column;
    width: 0;
    height: 100vh;
    overflow: hidden;
    z-index: 99;
    transition: all 0.5s ease 0s;
  }
  .overlay-menu .overlay-item {
    text-decoration: none;
    color: black;
    padding: 10px 0 10px 0;
    font-size: 20px;
  }
  .overlay-menu .rs {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .overlay-menu .rs .bi-facebook {
    margin-right: 15px;
    color: blue;
    font-size: 35px;
  }
  .overlay-menu .rs .bi-instagram {
    color: var(--rosa);
    font-size: 35px;
  }
  .menu-desktop {
    display: none;
    justify-content: space-around;
    align-items: center;
  }
  .menu-desktop .overlay-item {
    text-decoration: none;
    color: black;
    margin-right: 10px;
    transition: all 0.3s ease-in-out;
  }
  .menu-desktop button a {
    text-decoration: none;
    color: white;
  }
  .menu-desktop button {
    border-style: none;
    background-color: var(--rosa);
    border-radius: 15px;
    padding: 5px 10px 5px 10px;
    margin-right: 10px;
  }
  .menu-desktop button:hover {
    background-color: var(--morado);
    transition: all 0.5s linear;
  }
  .menu-desktop .overlay-item:hover {
    transition: all 0.3s ease-in-out;
    padding: 10px;
    background-color: var(--rosa-claro);
    border-radius: 10px;
  }
  /*Keyframes */
  @keyframes open {   /*Animacion de la imagen primero es transparente al25}% del tamaño y va creciendo */
    from {
      opacity: 0;
      scale: 25%;
    }
    to {
      opacity: 1;
      scale: 100%;
    }
  }
  /*Media query's */
  @media (min-width: 425px) {
    .navbar-mov .logoImg {
      max-width: 300px;
      height: auto;
    }
  }
  @media (min-width: 768px) {
    .menu-desktop {
      display: flex;
    }
    .btn-menu, .btn-menu-close {
      display: none;
    }
    .navbar-mov .logoImg {
      margin-left: 10px;
      max-width: 230px;
      height: auto;
    }
  }
  @media (min-width: 1024px) {
    .menu-desktop {
      width: 700px;
      justify-content: space-evenly;
    }
    .menu-desktop .overlay-item {
      font-size: 18px;
      font-weight: bold;
    }
    .menu-desktop button a {
      font-size: 20px;
    }
    .menu-desktop button {
      padding: 10px 15px 10px 15px;
      border-radius: 20px;
      transition: all 0.5s linear;
    }
    .navbar-mov {
      justify-content: space-between;
    }
    .navbar-mov .logoImg {
      max-width: 350px;
      height: auto;
      margin-left: 10px;
      padding: 0 30px;
    }
  }
  @media (min-width: 1100px) {
    .navbar-mov {
      padding: 0 30px 0 30px;
    } 
  }
</style>

<!--Scripts-->
<script>
  const open = document.getElementById("btn-menu");
  open.addEventListener('click', openMenu);
  const close = document.getElementById("btn-close");
  close.addEventListener('click', closeMenu);
  const closeM = document.getElementById("btn-close-1");
  closeM.addEventListener('click', closeMenu);
  function openMenu() {
    document.getElementById("overlay-menu").style.width = "100%";
    document.getElementById("btn-menu").style.display = "none";
    document.getElementById("btn-close").style.display = "block";
    document.getElementById("btn-close").style.animation = "open 0.5s ease-in-out";
  }
  function closeMenu() {
    document.getElementById("overlay-menu").style.width = "0";
    document.getElementById("btn-menu").style.display = "block";
    document.getElementById("btn-menu").style.animation = "open 0.5s ease-in-out";
    document.getElementById("btn-close").style.display = "none";
  }

  const logo = document.getElementById('logo')
  logo.addEventListener('click', () => {
    location.href = '/'
  })
</script>