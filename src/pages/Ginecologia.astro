---
import Layout from '../layouts/Layout.astro';
import NavbarMovil from '../components/NavbarMovil.astro'
import Footer from '../components/Footer.astro';
import Ubicacion from '../components/Ubicacion.astro';
import RedesFlotantes from '../components/RedesFlotantes.astro';
import Up from '../components/Up.astro';
import Contacto2 from '../components/Contacto2.astro';
---

<Layout title="Ginecología - Dra. Janeth Adriana García Cid">
	<main id="inicio">
		<NavbarMovil/>
    <div class="title-img">
      <h2>Ginecología</h2>
    </div>
    <section class="container-ginecologia">
      <h2>Métodos de Planificación Familiar</h2>
      <hr class="subrayado">
      <div class="container-planificacion">
        
      </div>
      <h2>Colocación de Dispositivo Intrauterino</h2>
      <hr class="subrayado">
      <div class="container-planificacion">
        
      </div>
      <h2>Colocación de Implante Subdérmico</h2>
      <hr class="subrayado">
      <div class="container-planificacion">
        
      </div>
    </section>
    <Contacto2 />
		<Ubicacion/>
		<RedesFlotantes/>
    <Up />
		<Footer/>
	</main>
</Layout>

<!-- Estilos -->
<style>
  .container-ginecologia {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
    padding: 6%;
  }
  .subrayado {
    border: 2px solid;
    width: 70%;
    color: blueviolet;
    margin: 0 0 10px 0;
    text-align: center;
  }
  .container-ginecologia h2 {
    color: var(--morado-title);
    text-align: center;
  }
  .title-img {
    background-image: url(../img/servicio/ginecologia/ginecologia-1.jpg);
    background-position: center;
    background-size: cover;
    height: auto;
    width: 100%;
    text-align: center;
    height: 500px;
    display: flex;
    justify-content: center;
    align-items: baseline;
  }
  .title-img h2 {
    margin-top: 40px;
    font-size: 2.5em;
    padding: 20px;
    backdrop-filter: blur(10px);
    border-radius: 40px;
    color: black;
  }
</style>