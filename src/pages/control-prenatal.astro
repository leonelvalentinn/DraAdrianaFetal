---
import Layout from '../layouts/Layout.astro';
import NavbarMovil from '../components/NavbarMovil.astro'
import Footer from '../components/Footer.astro';
import Ubicacion from '../components/Ubicacion.astro';
import RedesFlotantes from '../components/RedesFlotantes.astro';
import Servicio from '../components/Servicio.astro';
import Up from '../components/Up.astro';
import Contacto2 from '../components/Contacto2.astro';
import control1 from "../img/servicio/control-prenatal/control-1.jpg";
import ViewTransitions from 'astro/components/ViewTransitions.astro';
---

<Layout title="Control Prenatal - Dra. Janeth Adriana García Cid" description='Enfocados  en la prevención, diagnóstico oportuno y en el  tratamiento de aquellos factores que pueden condicionar mayores riesgos  maternos y perinatales.  Esto nos permitirá disminuir las complicaciones que se pudieran presentar en tu embarazo a través de intervenciones de forma oportuna que permitan prevenir dichos riesgos y asi lograr un buen resultado en tu embarazo.'>
	<main id="inicio">
    <ViewTransitions />
		<NavbarMovil/>
    <Servicio 
      title='¿En qué consiste?' 
      punto1='❤ Enfocados  en la prevención, diagnóstico oportuno y en el  tratamiento de aquellos factores que pueden condicionar mayores riesgos  maternos y perinatales.  Esto nos permitirá disminuir las complicaciones que se pudieran presentar en tu embarazo a través de intervenciones de forma oportuna que permitan prevenir dichos riesgos y asi lograr un buen resultado en tu embarazo.' 
      punto2='❤ Cada consulta de control prenatal incluye:'
      punto3='ㅤㅤㅤ❤ Evaluación de la hstoria clínica'
      punto4='ㅤㅤㅤ❤ Revisión de exámenes de laboratorio'
      punto5='ㅤㅤㅤ❤ Peso materno, signos vitales'
      punto6='ㅤㅤㅤ❤ Evaluación ultrasonográfica básica de tu bebé (evaluación del crecimiento y líquido amniótico)'
      img={control1}
      infoDesplegable1=''
      infoDesplegable2=''
    />
    <Contacto2 />
		<Ubicacion/>
		<RedesFlotantes/>
    <Up />
		<Footer/>
	</main>
</Layout>