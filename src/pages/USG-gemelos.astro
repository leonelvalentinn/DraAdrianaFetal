---
import Layout from '../layouts/Layout.astro';
import NavbarMovil from '../components/NavbarMovil.astro'
import Footer from '../components/Footer.astro';
import Ubicacion from '../components/Ubicacion.astro';
import RedesFlotantes from '../components/RedesFlotantes.astro';
import Servicio from '../components/Servicio.astro';
import Up from '../components/Up.astro';
import Contacto2 from '../components/Contacto2.astro';
import img1 from "../img/servicio/usg-gemelar/ultrasonido-3.jpg"
import ultrasonido1 from "../img/servicio/usg-gemelar/ultrasonido-1.jpg";
import ultrasonido2 from "../img/servicio/usg-gemelar/ultrasonido-2.jpg";
import img3 from "../img/servicio/usg-gemelar/Imagen3.jpg"
import img4 from "../img/servicio/usg-gemelar/Imagen4.jpg"
import img5 from "../img/servicio/usg-gemelar/Imagen5.jpg"
import Testimonios from '../components/Testimonios.astro';
import ViewTransitions from 'astro/components/ViewTransitions.astro';
---

<Layout title="USG de Embarazos Gemelares - Dra. Janeth Adriana García Cid" description=' Evaluación de la corionicidad, es decir  si se trata de un  embarazo gemelar con una placenta  en la que ambos gemelos la comparten o bien dos placentas, una para cada gemelo, ya que de acuerdo a ello será la vigilancia en estos embarazos'>
	<main id="inicio">
    <ViewTransitions />
		<NavbarMovil/>
    <Servicio 
      title='¿Qué se realiza en el ultrasonido de estos embarazos?' 
      punto1='❤ Evaluación de la corionicidad, es decir  si se trata de un  embarazo gemelar con una placenta  en la que ambos gemelos la comparten o bien dos placentas, una para cada gemelo, ya que de acuerdo a ello será la vigilancia en estos embarazos'  
      punto2='❤ Si son embarazos gemelares con una sola placenta, la evaluación y el seguimiento deberá ser más estrecho, ya que que hay mayor riesgo de complicaciones en estos embarazos.' 
      punto3='❤ La ecografía es el mejor método diagnóstico no sólo para identificar una gestación gemelar, sino también para catalogarla y especificar su corionicidad (número de placentas) y su amniocidad (número de bolsas).' 
      punto4=''
      punto5=''
      punto6=''
      img={img1}
      infoDesplegable1='Todas las pacientes con embarazos gemelares deben ser evaluadas por un médico especializado y altamente capacitado, como un médico materno fetal'.
      infoDesplegable2='Importante'
    />
    <Testimonios 
      img1={ultrasonido1}
      img2={ultrasonido2}
      img3={img3}
      img4={img4}
      img5={img5}
    />
    <Contacto2 />
		<Ubicacion/>
		<RedesFlotantes/>
    <Up />
		<Footer/>
	</main>
</Layout>